<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".AddGroupExpense">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="13dp"
        android:hint="Amount"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/etGroupExpLabel"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="13dp"
        android:hint="Label"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16dp"
        />

    <ListView
        android:id="@+id/lvlistview4"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="230dp"
        />

    <Button
        android:id="@+id/btnConfirmGroupExpense"
        android:onClick="btnConfirmGroupExpense"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="20dp"
        android:elevation="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_rounded"
        android:text="Confirm"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/btnCloseGroupExpense"
        android:onClick="btnCloseGroupExpense"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="220dp"
        android:elevation="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_rounded"
        android:text="Cancel"
        android:textSize="15dp"
        />

</RelativeLayout>